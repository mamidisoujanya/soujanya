#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <netdb.h> 
#include<ctype.h>
#include<arpa/inet.h>


void error(const char *msg)
{
    perror(msg);
    exit(0);
}
int main(int argc, char *argv[])
{
int sockfd, portno, n;

struct sockaddr_in serv_addr;

struct hostent *server;

char buffer[255];

    if (argc < 3)
    {
       fprintf(stderr,"usage %s hostname port\n", argv[0]);

       exit(0);
    }
portno = atoi(argv[2]);

sockfd = socket(AF_INET, SOCK_STREAM, 0);

	if (sockfd < 0) 

        perror("error opening socket");

server = gethostbyname(argv[1]);

     if (server == NULL) 
     {
        fprintf(stderr,"error, no such host\n");

        exit(0);
     }
memset(&serv_addr,'\0',sizeof(serv_addr));

serv_addr.sin_family = AF_INET;

bcopy((char *)server->h_addr,(char *)&serv_addr.sin_addr.s_addr,server->h_length);

serv_addr.sin_port = htons(portno);

if (connect(sockfd,(struct sockaddr *) &serv_addr,sizeof(serv_addr)) < 0) 

   error("error connecting");
	
while(1)
{
int choice;

char packet[255];
  
int deviceid,deviceno,attid;

printf("**---menu--**\n"); 

printf("enter the choice\n1.for add the device information\n2.for dispaly data\n3.edit the data\n4.remove the device\n5.exit\n");

scanf("%d",&choice);

packet[0]=choice;


if(choice==1)
{
	
	printf("add the info\n");

	printf("enter the device id:\n");

	scanf("%d",&deviceid);

	packet[1]=deviceid;
	
	printf("enter the attribute id 1for add info\n");
	
	scanf("%d",&attid);
		
	packet[2]=attid;

	printf("enter the device no:\n");

	scanf("%d",&deviceno);
	
	 packet[3]=deviceno;

	printf("enter device name length should be less than 20:\n");

	scanf("%19s",&packet[4]);

	printf("enter location length should be less than 20:\n");

	scanf("%19s",&packet[30]); 

	write(sockfd,packet,100);

}
else if(choice==2)
{
        printf("enter the device id which one you want see:\n");

	scanf("%d",&deviceid);

	packet[1]=deviceid;

	write(sockfd,packet,100);
	
	n=read(sockfd,buffer,100);

	  if (n < 0) 

		error("error in reading to socket");

	printf("%s",buffer);
}

else if(choice==3)
{
	
	printf("edit the data\n");
	
	printf("enter the device id which one you want change:\n");

	scanf("%d",&deviceid);

	packet[1]=deviceid;
		
	printf("enter attributeid\ni=1.for edit device no\n2.for edit name \n3.for edit location \n4.edit all\n");

        scanf("%d",&attid);

	packet[2]=attid;
	

if(attid==1)
	{
	        printf("enter the device no:\n");

	        scanf("%d",&deviceno);
	
	        packet[3]=deviceno;
	}
               
 else if(attid==2)
	{
      	        printf("enter device name length should be less than 20:\n");

	        scanf("%19s",&packet[5]);
	}    
 else if(attid==3)
	{
	        printf("enter location length should be less than 20:\n");

	        scanf("%19s",&packet[30]); 
	}
   else if(attid==4)
	{	
		printf("enter the device no:\n");

	       scanf("%d",&deviceno);
	
	       packet[3]=deviceno;
	
	       printf("enter device name length should be less than 20:\n");

	       scanf("%19s",&packet[4]);

	       printf("enter location length should be less than 20:\n");

	       scanf("%19s",&packet[30]);

	}
write(sockfd,packet,100);

n=read(sockfd,buffer,100);

if (n < 0) 

error("error in reading to socket");

printf("%s",buffer);
	
}

else if(choice==4)
{
	printf("remove the device\n");

	printf("enter the device id which one you want remove:\n");

	scanf("%d",&deviceid);

	packet[1]=deviceid;

	write(sockfd,packet,100);

read(sockfd,buffer,20);

printf("%s",buffer);

}
else if(choice == 5)
{
printf("exit successfully");

close(sockfd);

exit(1);

}
}

return 0;

}
