#include<stdio.h>
#include<string.h>

void sort(char str[25][25],int count)
{

 int i,j;
 char temp[25];
   for(i=1;i<=count;i++)
   {
      for(j=0;j<=count-i;j++)
	{
         if(strcmp(str[j],str[j+1])>0)
	 {
            strcpy(temp,str[j]);
            strcpy(str[j],str[j+1]);
            strcpy(str[j+1],temp);
         }
      }
  }
   printf("Order of Sorted Strings:");
   for(i=0;i<=count;i++)
      printf("%s\n",str[i]);
}

void addstring(char str[25][25],int count)
{
int i,j,position;
char string[10];

printf("enter the position you want to add\n");
scanf("%d",&position);

printf("enter the string which one you want add\n");
scanf("%s",string);

   for(i=count-1;i>=position-1;i--)
    {
    strcpy(str[i+1],str[i]);
    }

strcpy(str[position-1],string);

 printf("Order of Sorted Strings:");
   for(i=0;i<=count;i++)
      printf("%s\n",str[i]);
}
   
void deletestring(char str[25][25],int count)
{
int i,j,position;
printf("enter the position you want delete\n");
scanf("%d",&position);

for(i=position;i<count;i++)
{
strcpy(str[i],str[i+1]);
}

 printf("after deleting the String order is:");
   for(i=0;i<=count;i++)
      printf("%s\n",str[i]);
}

int main(){
int i,j,count,position;
char str[10][25],temp[25];
char string[10];

printf("How many strings you are going to enter: ");
scanf("%d",&count);
printf("Enter Strings one by one: ");
  for(i=0;i<count;i++)
  scanf("%s",&str[i]);
 
int choice;
	printf("enter 1:for add string\n");
	printf("enter 2:for delete string\n");
	printf("enter 3:for sort string\n");
	scanf("%d",&choice);
if(choice==1)
{
addstring(str,count);
}
else if(choice==2)
{
deletestring(str,count);
}
else if(choice==3)
{
sort(str,count);
}
else
{
printf("invalid choice");
}
   return 0;
}
