#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,j,n,n1,a[10],b[10],c[20],l;

printf("enter the array1 size \n ");
scanf("%d",&n);

printf("enter the array1 elements \n ");
for(i=0;i<n;i++)
scanf("%d",&a[i]);

printf("enter the array2 size \n ");
scanf("%d",&n1);

printf("enter the array2 elements \n ");
for(i=0;i<n1;i++)
scanf("%d",&b[i]);

l=n+n1;
//----mearge arrays

for(i=0,j=0;i<n;i++,j++)
c[j]=a[i];

//----array2
for(i=0,j=n;i<n;i++,j++)
c[j]=b[i];

printf("mearge the two arrays is \n ");

for(j=0;j<l;j++)
printf("%d\n",c[j]);

return 0;
}
