#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,j,r,c,a[10][10],b[10][10],sub[10][10];

printf("enter the row size \n ");
scanf("%d",&r);
printf("enter the column size\n ");
scanf("%d",&c);

printf("enter the matrix1 elements\n");
for(i=0;i<r;i++)
  for(j=0;j<c;j++)
  
  scanf("%d",&a[i][j]);
  
printf("enter the matrix2 elements\n");
for(i=0;i<r;i++)
  for(j=0;j<c;j++)
  
  scanf("%d",&b[i][j]);

printf("after subtracting two matrices :\n");

for(i=0;i<r;i++)
{
  for(j=0;j<c;j++)
   {
   
   sub[i][j]=a[i][j]-b[i][j];
   printf("%d\t",sub[i][j]);

   }   
  printf("\n\n");
}
  
return 0;
}
