#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,j,r,c;
int a[10][10],b[10][10],add[20][20];
printf("enter the row size \n ");
scanf("%d",&r);
printf("enter the column size \n ");
scanf("%d",&c);

printf("enter the matrix1 elements \n ");
for(i=0;i<r;i++)
  for(j=0;j<c;j++)
  
  scanf("%d",&a[i][j]);
  
printf("enter the matrix12 elements \n ");
for(i=0;i<r;i++)
  for(j=0;j<c;j++)
  
  scanf("%d",&b[i][j]);

printf("after adding  two matrix's :\n");

for(i=0;i<r;i++)
{
  for(j=0;j<c;j++)
  {
   
   add[i][j]=a[i][j]+b[i][j];
   printf("%d\t",add[i][j]);
   }
    printf("\n\n");
 }
   
return 0;
}
