#include<stdio.h>
#include<stdlib.h>
int main()
{
int a[100],n,i;

printf("enter the  array size\n");
scanf("%d",&n);

   printf("enter the  array of elements\n");
   for (i = 0; i<n; i++) 
   scanf("%d",&a[i]);
  int *ptr=&a[0];
   printf("print the array of elements\n");
   for (i = 0; i<n; i++) 
   printf("%d\n",*(ptr+i));

 return 0;
}
