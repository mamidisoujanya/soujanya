#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <netdb.h> 


void error(const char *msg)
{
    perror(msg);
    exit(0);
}

int main(int argc, char *argv[])
{
    int sockfd, portno, n;
    struct sockaddr_in serv_addr;
    struct hostent *server;

    char buffer[255];
    if (argc < 3)
    {
       fprintf(stderr,"usage %s hostname port\n", argv[0]);
       exit(0);
    }
    portno = atoi(argv[2]);

    sockfd = socket(AF_INET, SOCK_STREAM, 0);
    if (sockfd < 0) 
        error("error opening socket");

    server = gethostbyname(argv[1]);
     if (server == NULL) 
     {
        fprintf(stderr,"error, no such host\n");
        exit(0);
     }
  
memset(&serv_addr,'\0',sizeof(serv_addr));

    serv_addr.sin_family = AF_INET;

    bcopy((char *)server->h_addr,(char *)&serv_addr.sin_addr.s_addr,server->h_length);

    serv_addr.sin_port = htons(portno);

    if (connect(sockfd,(struct sockaddr *) &serv_addr,sizeof(serv_addr)) < 0) 

        error("error connecting");
        
FILE *fptr; 

int deviceid,choice;

char devicename[100],location[100];

 
fptr = fopen("one.txt", "w"); 

    if (fptr == NULL) 
    { 
        printf("Cannot open file \n"); 

        exit(0); 
    } 
printf("enter the details :\n ");

printf("enter the\n 1.devicename\n");

scanf("%s",devicename); 
printf("enter the deviceid\n");
scanf("%d", &deviceid);
printf("enter the location: \n");
scanf("%s",location);

fprintf(fptr,"devicename=%s\ndeviceid:%d\nlocation:%s",devicename,deviceid,location);

printf("enter the choice 1.for display the details 2.edit the data\n");
scanf("%d",&choice);

if(choice==1)
{
FILE *ptr;
char ch ;
printf(" details of device is \n");

  ptr = fopen("one.txt", "r"); 

       while(ch != EOF)
          {
		
		fscanf(ptr , "%s" , buffer);

		printf("%s\n" , buffer);	

		write(sockfd,buffer,255);

		ch = fgetc(ptr);
          }
	printf("The file was sent successfully");
    
    close(sockfd);

	fclose(fptr);
}
else if(choice==2)
{
printf("edit the data\n");

 
fptr = fopen("xyz.txt", "w"); 

    if (fptr == NULL) 
    { 
        printf("Cannot open file \n"); 

        exit(0); 
    } 
printf("enter the details :\n ");

printf("enter the\n devicename\n");

scanf("%s",devicename); 

printf("enter the deviceid\n");

scanf("%d", &deviceid);

printf("enter the location: \n");

scanf("%s",location);
}
    return 0;
}
