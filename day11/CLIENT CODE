scanf("%d", &deviceid);

printf("enter thr location its length should be less than 30 \n");

scanf("%s",location);

fprintf(fptr,"devicename=%s\ndeviceid:%d\nlocation:%s",devicename,deviceid,location);

//printf("enter the choice\n1.for add the details\n2.for dispaly data\n3.edit the data\n4.remove the device\n5.exit\n");
//scanf("%d",&choice);
}

else if(choice==2)
{
printf("display the info\n");
FILE *ptr;
char ch ;
ptr = fopen("one.txt", "r"); 

    if (ptr == NULL) 
    { 
        printf("Cannot open file \n"); 

        exit(0); 
    } 
       while(ch != EOF)
          {
		
		fscanf(ptr , "%s" , buffer);

		write(sockfd,buffer,255);

		printf("%s\n" , buffer);	


		ch = fgetc(ptr);
          }
	printf("The file was sent successfully\n");
    
        close(sockfd);

	fclose(ptr);

//printf("enter the choice\n1.for add the details\n2.for dispaly data\n3.edit the data\n4.remove the device\n5.exit\n");
//scanf("%d",&choice);
}
else if(choice==3)
{
FILE *fp;
printf("edit the info\n");
 
fp = fopen("one.txt", "r+"); 

    if (fp == NULL) 
    { 
        printf("Cannot open file \n"); 

        exit(0); 
    } 

int i, deviceid;

char devicename[30],location[30];

//printf("i=1.for edit name 2.for edit device id 3.for edit location");
//scanf("%d",&i);
   switch(i)
   {
	case 1:

	printf("enter thr devicename its length should be less than 30\n");

	scanf("%s",devicename); 
	break;
	case 2:

	printf("enter the deviceid\n");

