#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,n;
int *d;
printf("enter the n value how many numbers want to enter\n");
scanf("%d",&n);

d=(int*)calloc(n,sizeof(int));

if(d==NULL)
  {
  printf("no memory allocated");
  }
printf("enter the numbers\n");

for(i=0;i<n;i++)
  {
  scanf("%d",d+i);
  }
    for(i=0;i<n;i++)
    {
    if(*d<*(d+i))
   *d=*(d+i);
    }
printf("largest element is%d\n",*d);
return 0;
}

