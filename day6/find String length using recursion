#include<stdio.h>
#include<stdlib.h>
int findlength(char *str)
{
 static int c=0;
if(*str=='\0')
return c;
else
{
c++;
return findlength(++str);
}
}
int main()
{
int c=0;
char str[100];
printf("enter the string\n");
scanf("%[^\n]%*c",str);
c=findlength(str);
printf("\nlength of string is:%d\n",c);
return 0;
}
