void add()
{
	char str[100],str1[100];
	int i,j,l;
	printf("enter the string str\n");
	scanf("%[^\n]%*c,str");
		printf("enter the string str1\n");
	scanf("%[^\n]%*c,str1");
	for(l=0;str[l]!='\0';l++);
	for(i=l,j=0;str1[j]!=0;i++,j++)
	{
		str[i]=str1[j];
	}
	printf("after adding the string\n");
	printf("%s",str);
	
}
void sort()
{
	char str[50];
char temp;
int i,j=0,k;
printf("enter the string\n");
scanf("%s",str);
while(str[j]!='\0')
j++;
for(i=1;i<j;i++)
for(k=0;k<j-i;k++)

if(str[k]>str[k+1])
{
temp=str[k];
str[k]=str[k+1];
str[k+1]=temp;
}

printf("sorting string is %s\n",str);
}
void findphrase()
{
	char str[50],str1[50];
int i,j,flag,l;
printf("enter main string\n");
 scanf("%[^\n]%*c",str);

printf("sub string\n");
 scanf("%[^\n]%*c",str1);

for(l=0;str1[l]!='\0';l++);

for(i=0,j=0;str[i]!='\0' && str1[j]!='\0';i++)
{
	if(str[i]==str1[j])
		{
		j++;
		}
	else
 	{
	j=0;	
	}
}
if(j==l)
printf("substring found at position %d",i-j+1);
else
printf("sub string not found");
}
