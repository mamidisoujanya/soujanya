#include<stdio.h>
#include<stdlib.h>
int main()
{
float cel,fh;
int i;
printf("enter the i value\n");
scanf("%d",&i);
  if(i==1)
  {
  printf("enter the temparature in celsius\n");
  scanf("%f",&cel);
  fh=(cel*1.8)+32;
  printf("temparature in Fahrenheit is:%f\n",fh);
  }
    else if(i==2)
    {
    printf("enter the temparature in Fahrenheit \n");
    scanf("%f",&fh);
    cel=(fh-32)/1.8;
    printf("temparature in celsius is:%f\n",cel);
    }
      else
      {
      printf("i value invalid ");
      }
return 0;
}
